<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout tools:context=".MainActivity"
    android:background="@drawable/backgroundweather" android:layout_height="match_parent" android:layout_width="wrap_content" android:id="@+id/relative_layout" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:textColor="#F44336"
        android:text="Enter the City"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/cityname"
        android:textColor="#FFFFFF"
        android:layout_marginTop="0dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/button"
        android:text="@string/what_s_weather"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cityname"
        android:onClick="findWeather"/>

    <TextView
        android:id="@+id/information_tv"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:fontFamily="monospace" />

</RelativeLayout>